<%= form_with(model: @search, url: searches_create_path) do |form| %> 
  <% if @search.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@search.errors.count, "error") %> <%= t('query.create_error') %></h2>

      <ul>
      <% @search.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="input-group">
    <%= form.text_field :query, class: "form-control", placeholder: t('query.message') %>
    <%= form.submit t('activerecord.models.search.one'), class: "btn btn-outline-secondary" %>
    <%= form.submit t('query.random'), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
<br>