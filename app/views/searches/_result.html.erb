<% if fact_results.any? %>
  <% fact_results.each do |result| %>
    <div id="<%= dom_id fact_results.last.search %>" class="card">
      <div class="card-header">
        <strong><%= t('activerecord.attributes.search.query') %>:</strong>  <%= result.search.query.capitalize %>
      </div>
      
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= result.value %></p>
          <footer class="blockquote-footer">
          <% if result.categories.any? %>
            <%= result.categories.map(&:name).map(&:capitalize).join(',') %></footer>
          <% end %>
        </blockquote>
      </div>
    </div>
    <br>
  <% end %>
<% else %>
  <p class="lead"><%= t('messages.without_results') %></p>
<% end %>
