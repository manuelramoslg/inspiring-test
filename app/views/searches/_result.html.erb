<% if fact_results.any? %>
  <strong>Total results: <%= fact_results.count %> </strong>
  <% fact_results.each do |result| %>
    <div id="<%= dom_id fact_results.last.search %>" class="card">
      <div class="card-header">
        <strong>Search Fact Result:</strong>  <%= result.search.query.capitalize %>
      </div>
      
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= result.value %></p>
          <footer class="blockquote-footer">
          Category 
          <%= result.categories.map(&:name).map(&:capitalize).join(',') %></footer>
        </blockquote>
      </div>
    </div>
    <br>
  <% end %>
<% end %>

